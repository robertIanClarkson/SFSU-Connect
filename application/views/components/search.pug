            i.material-icons checkroom 
            |Clothes
        li
          a#electronics-cat
            i.material-icons camera_alt 
            |Electronics
        li
          a#home-cat
            i.material-icons countertops 
            |Home &amp; Kitchen
        li
          a#misc-cat
            i.material-icons pedal_bike 
            |Miscellaneous
        li
          a#toys-cat
            i.material-icons sports_esports 
            |Toys &amp; Games
        li
          a#tutoring-cat
            i.material-icons face 
            |Tutoring
    
    //- user search input
    .col.s7
      - var searchPlaceholder = "Type what you are looking for here"
      input#search-input(placeholder=searchPlaceholder type="text" class="validate")
    
    //- submit
    .col.s1
      a#search-submit.btn
        i.material-icons search
  
