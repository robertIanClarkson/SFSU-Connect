extends layout

block content
	// THIS THIS THE ITEM PAGE, WHERE YOU CAN VIEW THE ITEM IN DETAIL
	// AND CONTACT THE SELLER
	// --------------------------CSS---------------------------------
	link(rel='stylesheet', href='/stylesheets/item.css')
	// --------------------------CSS---------------------------------

	// ---------------------------	CONTENT----------------------------
	.row
	.row
		// split screen in half with 2 floating containers
		#infoBox
			.row
				h4.white-text#header Title
				h5.white-text#title #{item.name}
				h4.white-text#header Description
				h5.white-text#description #{item.description}
				h3.white-text#price(class="highlight" style="float:left") $#{item.price}
				button.black-text#itembutton(style="float:right" type="submit" form="messageForm") Contact
			.row
				form(action="/item/message" method="post")#messageForm
					.input-field
						//label(for='messageArea') Message Owner
						input(type="hidden", name="item_id", value=item.id)
						textarea#messageArea.materialize-textarea(name='message' autocomplete="off" placeholder="  Message Owner Here"  required)
						
		#imageBox
			img#image(src='/images/items/' + item.image alt='image not found')
			if error
				h6.red-text Error: #{error}

	// ---------------------------	CONTENT----------------------------

	// ---------------------------	JS ----------------------------
	script(src='/javascripts/item.js')
	// ---------------------------	JS ----------------------------
